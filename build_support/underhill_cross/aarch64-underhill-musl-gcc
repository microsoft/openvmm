#!/bin/sh

script_dir="$(dirname "$0")"
# Default to Ubuntu's cross-compiler name (aarch64-linux-gnu-gcc)
# Nix environments should set AARCH64_GCC=aarch64-unknown-linux-gnu-gcc to override
MUSL_ARCH=aarch64 MUSL_SYSROOT="$AARCH64_SYSROOT" exec "${REALGCC:-${AARCH64_GCC:-aarch64-linux-gnu-gcc}}" "$@" -specs "$script_dir/musl-gcc.specs"
